    <LinearLayout
        android:id="@+id/btnLay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/passwordTitle"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="0.45"
            android:gravity="center_vertical"
            android:text="@string/password"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_weight="0.5"
            android:background="@drawable/bg_textview_shape"
            android:gravity="top"
            android:maxLines="50" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnLay2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnLay1"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="Confirm Password" />

        <Button
            android:id="@+id/reset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_weight="0.5"
            android:text="Reset Password" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnLay3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnLay2"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/enableLogin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="Enable UserRole" />

        <Button
            android:id="@+id/disableLogin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_weight="0.5"
            android:text="Disable UserRole" />

    </LinearLayout>

